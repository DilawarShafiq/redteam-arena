{
  "name": "redteam-arena",
  "version": "0.1.0",
  "type": "module",
  "description": "AI vs AI adversarial security testing platform. Red team agents attack, blue team agents defend. Fully automated.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "redteam-arena": "dist/cli.js"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.js.map",
    "dist/scenarios/builtin/*.md",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && npx copyfiles -u 1 \"src/scenarios/builtin/*.md\" dist",
    "dev": "npx tsx src/cli.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "ai",
    "security",
    "red-team",
    "adversarial",
    "agents",
    "cybersecurity",
    "pentesting",
    "automated-security"
  ],
  "author": "Muhammad Dilawar Shafiq (Dilawar Gopang) <dilawar.gopang@gmail.com> (https://github.com/DilawarShafiq)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DilawarShafiq/redteam-arena.git"
  },
  "bugs": {
    "url": "https://github.com/DilawarShafiq/redteam-arena/issues"
  },
  "homepage": "https://github.com/DilawarShafiq/redteam-arena#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.78.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "js-yaml": "^4.1.1",
    "nanoid": "^5.1.6"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.3.0",
    "copyfiles": "^2.4.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
